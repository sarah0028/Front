<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginService.SignUpFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".loginService.SignUpActivity">

        <TextView
            android:id="@+id/SignUp_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/water_text"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_Name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_below="@id/SignUp_Text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingStart="15dp"
            android:background="@drawable/login_input_form"
            android:hint="Name"
            />
        <EditText
            android:id="@+id/input_Id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_below="@id/input_Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingStart="15dp"
            android:background="@drawable/login_input_form"
            android:hint="ID" />

        <EditText
            android:id="@+id/input_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/input_Id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_input_form"
            android:ems="15"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp" />
        <android.widget.Button
            android:id="@+id/signUp_btn"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_below="@id/input_pwd"
            android:background="@drawable/rounded_login_button"
            android:text="Send"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</FrameLayout>