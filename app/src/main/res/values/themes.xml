<resources>
    <!-- Base application theme. -->
    <style name="Theme.Entofu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimary">@color/water_text</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="backgroundTint">@color/backgroundTint</item>


<!--        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>-->

        <!-- Customize your theme here. -->
    </style>

<!--    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">-->
<!--        <item name="colorAccent">@color/water_text</item>-->
<!--    </style>-->

    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">#424141</item>
        <item name="android:textColorHint">#818181</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="NavigationTheme" parent="">
        <item name="listPreferredItemHeightSmall">60dp</item><!-- menu item height- vary as u need -->
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_round_top_border_20</item>
    </style>

</resources>